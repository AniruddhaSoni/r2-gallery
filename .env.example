# Cloudflare R2 configuration
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_ACCESS_KEY=
CLOUDFLARE_SECRET_ACCESS_KEY=
CLOUDFLARE_BUCKETNAME=your-bucket-name
CLOUDFLARE_BUCKET_URL=https://www.your-domain.com
CLOUDFLARE_REGION=auto
URL_TTL_SECONDS=900

# Authentication (NextAuth) - Generate with: npx auth secret
AUTH_SECRET=

# Login credentials
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD=change-me

# API bearer token
APP_PASSWORD=change-me
NEXT_PUBLIC_APP_PASSWORD=change-me

# Optional: Thumbnail Worker URL
NEXT_PUBLIC_THUMBNAIL_URL=
